package com.zensar;

import java.util.HashMap;
import java.util.List;

import javax.annotation.PostConstruct;

import org.springframework.boot.actuate.endpoint.annotation.Endpoint;
import org.springframework.stereotype.Component;

@Component
@Endpoint(id = "bug-fixes")
public class BugFixesActuator {
    private HashMap<String, List<String>>bugFixesByVersionMap
    @PostConstruct
    public void init() {
    bugFixesByVersionMap.put("v1", Arrays.asList("Invalid status issue", "Application closing not 
    working"));
    bugFixesByVersionMap.put("v2", Arrays.asList("Window size change not working", "Window 
    minimizing not working"));
    }

}
